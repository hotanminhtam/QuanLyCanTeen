@model IEnumerable<CanTeenVLU.Models.CATEGORY>

@{
    ViewBag.Title = "Loại món ăn";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="font-family:'Times New Roman', Times, serif">Danh sách loại món ăn</h2>

<button style="border-radius:24px">
    @Html.ActionLink("Tạo mới", "Create")
</button>

<hr />

<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title" style="font-family:'Times New Roman', Times, serif">Bảng danh sách các loại món ăn</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped" style="text-align:center">
                        <thead>
                            <tr>
                                <th>Mã loại món ăn</th>
                                <th>Tên món ăn</th>
                                <th>Hình ảnh</th>
                                <th>Trạng thái</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="text-align:center">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CATEGORY_CODE)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CATEGORY_NAME)
                                    </td>
                                    <td>
                                        <img src="@item.IMAGE_URL" width="100" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.STATUS)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.ID }) |
                                        @Html.ActionLink("Chi tiết", "Details", new { id = item.ID }) |
                                        @Html.ActionLink("Xoá", "Delete", new { id = item.ID }, new { onclick = "return confirm('Bạn có chắc chắn muốn xoá không?');" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Mã loại món ăn</th>
                                <th>Tên món ăn</th>
                                <th>Hình ảnh</th>
                                <th>Trạng thái</th>
                                <th>Hành động</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>