@model IEnumerable<CanTeenVLU.Models.FOOD>

@{
    ViewBag.Title = "Món ăn";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="font-family:'Times New Roman', Times, serif">Danh sách món ăn</h2>

<button style="border-radius:24px">
    @Html.ActionLink("Tạo mới", "Create")
</button>

<hr />

<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Bảng danh sách các món ăn</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead  style="text-align:center">
                            <tr>
                                <th>Mã món ăn</th>
                                <th>Tên món ăn</th>
                                <th>Mô tả</th>
                                <th>Giá</th>
                                <th>Hình ảnh</th>
                                <th>Trạng thái</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr style="text-align:center">
                                <td>
                                    @Html.DisplayFor(modelItem => item.FOOD_CODE)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FOOD_NAME)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DESCRIPTION)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PRICE)
                                </td>
                                <td>
                                    <img src="@item.IMAGE_URL" width="100" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.STATUS)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                </td>
                            </tr>
                        }
                        <tfoot style="text-align:center">
                            <tr>
                                <th>Mãmón ăn</th>
                                <th>Tên món ăn</th>
                                <th>Mô tả</th>
                                <th>Giá</th>
                                <th>Hình ảnh</th>
                                <th>Trạng thái</th>
                                <th>Hành động</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
        </div>
    </div>
</section>